<h1>Listing chats</h1>

<table>
  <tr>
    <th>User 1</th>
    <th>User 2</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chats.each do |chat| %>
  <tr>
    <td><%= chat.user_1_id %></td>
    <td><%= chat.user_2_id %></td>
    <td><%= chat.message %></td>
    <td><%= link_to 'Show', chat %></td>
    <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
    <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

